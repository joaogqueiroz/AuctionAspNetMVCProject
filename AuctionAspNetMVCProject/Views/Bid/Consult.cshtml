@using AuctionAspNetMVCProject.Data.Entities
@model AuctionAspNetMVCProject.Models.BidRegisterModel
@{
    var auction = TempData["Consult"] as Auction;
}
@{
    ViewData["Title"] = "Consult";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>@auction.Name</h1>

<div class="row">
    <div class="col-md-6">
        <img class="card-img-top" alt="100%x180" style="height: 180px; width: 100%; display: block;" src="~/imgs/imageTest.svg">

    </div>

    <div class="col-md-6">
        <h4>Actual bid</h4>
        <br />
        <label><strong>$@auction.Value</strong></label>

    </div>
    <div class="col-md-6">
        <h4>Description</h4>
        <br />
        <label>@auction.Description</label>

    </div>
</div>
<br />
@using (Html.BeginForm("Register", "Bid", FormMethod.Post, new { @autocomplete = "off" }))
{
<div class="col-md-6">
    <!--Hidden field-->
    @Html.HiddenFor(model => model.AuctionID)
    <label>Your bid</label>
    @Html.TextBoxFor(model => model.Value, new { @class = "form-control", type = "number", @min = "0.00", @step = "05.00", @value = "1.00" })
    <span class="text-danger">@Html.ValidationMessageFor(model => model.Value)</span>
</div>
    <br />
    <input type="submit" value="Bid" class="btn btn-secondary" />
}
